{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!
{% endblock %}

{% block body %}
	<div class="infos" style="text-align: center">
		<h1>Your account</h1>
		<h2>{{app.user.prenom}}
			{{app.user.nom}}</h2>
		<h3>Email:</h3>
		<p>{{app.user.email}}</p>
		<h3>Address:</h3>
		<p>{{app.user.adresse}}
			{{app.user.codepostal}}
			{{app.user.ville}}
			{{app.user.pays}}</p>
		<hr>
		<button>
			<a href={{path('app_address',{'id':app.user.id} )}}>Edit my address</a>
		</button>
		<h3>Mes commandes:</h3>
		<table>
			<thead>
				<tr>
					<th>NÂ° commande</th>
					<th>Date</th>
					<th>Montant</th>
					<th>Statut</th>
				</tr>
			</thead>
			<tbody>
				{% for commande in commandes %}
					<tr>
						<td>{{commande.id}}</td>
						<td>{{commande.datecommande|date('d-m-Y')}}</td>
						<td>{{commande.montant}}</td>
						<td>{{commande.statut}}</td>
						<td><button><a href={{path('app_orderdetails',{'id':commande.id})}}>Details</a></button></td>

					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
